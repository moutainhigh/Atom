<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ABasic">
    <sql id="page">
		 <if test="start !=null and limit !=null " >
		 	<choose>
		 		<when test="limit > 1000">
		 			limit ${start}, 1000
		 		</when>
		 		<otherwise>
		 			limit ${start}, ${limit}			
		 		</otherwise>
		 	</choose>
		  </if>
  	</sql>
  	<sql id="orderby">
  	  <if test="field != null and direction !=null" > order by ${field} ${direction}</if>	
  </sql>
